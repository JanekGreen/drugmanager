<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="pl.pwojcik.drugmanager.ui.adddrug.ResultsFragment">
    <LinearLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetectedDrugName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="Polopiryna"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
        <TextView
            android:id="@+id/tvCaptionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="Nazwa leku"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <TextView
            android:id="@+id/tvUsageType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:text="Tabletki"
            />
        <TextView
            android:id="@+id/tvCaptionUsageType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="Rodzaj preparatu"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <TextView
            android:id="@+id/tvDetectedDrugProducer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:text="Polpharma SA"
            />

        <TextView
            android:id="@+id/tvCaptionProducer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="Producent"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnAddDrug"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:elevation="6dp"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="Dodaj"
            android:textColor="#fff"
            app:backgroundTint="@color/colorPrimaryDark"/>

    </LinearLayout>

</FrameLayout>
