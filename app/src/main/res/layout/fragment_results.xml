<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.pwojcik.drugmanager.ui.adddrug.ResultsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_info_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/resultLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDetectedDrugName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Polopiryna"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:id="@+id/tvCaptionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nazwa leku"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <TextView
                android:id="@+id/tvUsageType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tabletki"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/tvCaptionUsageType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rodzaj preparatu"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <TextView
                android:id="@+id/tvDetectedDrugProducer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Polpharma SA"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/tvCaptionProducer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Producent"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnAddDrug"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:elevation="6dp"
                android:padding="8dp"
                android:text="Dodaj"
                android:textColor="#fff"
                app:backgroundTint="@color/colorPrimaryDark" />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
